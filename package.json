{
  "name": "jomadu-personal-website",
  "version": "1.0.0",
  "description": "Max Dunn's Personal Website",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
    "clean:css": "find ./dist -type f -name '*.css' -print -delete",
    "build:css": "npm run clean:css && npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "clean:images": "if [ -d \"dist/images\" ]; then rm -rf dist/images; fi",
    "build:images": "npm run clean:images && imagemin src/images/**/* --out-dir=dist/images",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "clean:html": "find ./dist -type f -name '*.html' -print -delete",
    "build:html": "npm run clean:html && posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "clean": "rm -r dist/*",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*"
  },
  "author": "Max Dunn",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.5.3",
    "jquery": "^3.5.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.1",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.13",
    "eslint": "^7.12.1",
    "eslint-loader": "^4.0.2",
    "htmlnano": "^0.2.7",
    "imagemin-cli": "^6.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.1.4",
    "postcss-cli": "^8.1.0",
    "posthtml": "^0.13.4",
    "posthtml-cli": "^0.8.0",
    "posthtml-modules": "^0.6.2",
    "stylelint": "^13.7.2",
    "webpack": "^5.3.1",
    "webpack-cli": "^4.1.0"
  }
}
